.page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.page-t{
  width: 100%;
  height: 90%;
  background: #e6f1f8;
}
.textareaInput{
  font-size: 5.4vw;
  background: #fff;
  width: 96%;
  padding: 2%;
  margin-bottom:30px;
}
.btns{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #fff;
  background: #656e7f;
}

.dateTxt{
  float: left;
  margin: 10px 0px 20px 10%;
  border-bottom: 1px solid #ccc;
}
.timeTxt{
  float: right;
  margin: 10px 10% 20px 0px;
  border-bottom: 1px solid #ccc;
}
